# Database
DATABASE_URL=postgresql://user:password@localhost:5432/planning_db

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key

# Email Service (SendGrid or Mailgun)
